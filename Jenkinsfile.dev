pipeline {
    agent any

    environment {
        GCLOUD_SDK_PATH = '/root/google-cloud-sdk'
    }

    stages {

        stage('Descarga de Fuentes') {
            steps {
                script {
                    deleteDir()
                    checkout scm
                       sh "gcloud --help"
                }
            }
        }

        stage('Configurar gcloud') {
            steps {
                script {
                    // Asegurarse de que gcloud esté en el PATH
                    sh "export PATH=\$PATH:${GCLOUD_SDK_PATH}/bin"

                    // Iniciar sesión con gcloud
                    sh "gcloud --help"
                }
            }
        }
    }
}
